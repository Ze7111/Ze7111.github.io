---
import Layout from "@/layouts/Layout.astro";
import Head from "@/components/Head.astro";
import Title from "@/components/Title.astro";
import { Image } from "astro:assets";
import blur from "/src/assets/img/core/bg.png";
import PortfolioCard from "@/components/PortfolioCard.astro";
import portfolioData from "@/assets/manifest.json";

export const prerender = true;

let title = Astro.props;
---

<Head title="Portfolio" />
<Layout class="relative">
	<div class="grid mt-[11.1111%] content-center">
		<Title text="Portfolio" />
	</div>
	<!-- ABOUT ME -->
	<section class="grid px-3 lg:px-0 content-start text-white">
		<Image
			src={blur}
			class="fixed top-0 bottom-0 left-0 right-0 m-auto h-full w-full object-cover object-center z-[-1]"
			alt="blur background"
		/>
		<div class="grid grid-rows-auto content-center gap-5 pb-10 mt-[11.1111%]">
			{
				portfolioData.map((item) => (
					<PortfolioCard
						img={item.img}
						alt={item.alt}
						site={item.site}
						title={item.title}
						badge_props={item.badge_props}
						tech_stack={item.tech_stack}
						description={item.description}
						source={item.source}
					/>
				))
			}
		</div>
	</section>
</Layout>
